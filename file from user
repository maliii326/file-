def write_file():
    name=input("enter name:")
    reg=input("enter reg no :")
    dept=input("enter dept name :")
    smstr=input("enter smstr no :")
    f=open ("student.text","w")
    f.write(str(name))
    f.write("\n")
    f.write(str(reg))
    f.write("\n")
    f.write(str(dept))
    f.write("\n")
    f.write(str(smstr))
    f.close()
write_file()
